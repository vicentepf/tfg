<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/aqua" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingRight="10dp"
        android:stretchColumns="1" >

        <TextView
            android:id="@+id/text_nuevo_trabajo_cabecera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/nuevo_trabajo_cabecera"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TableRow>

            <TextView
                android:id="@+id/text_nuevo_trabajo_id_trabajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="@string/text_nuevo_trabajo_id_trabajo"
                android:textSize="14sp"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/text_nuevo_trabajo_id_trabajo_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint=""
                android:text=""
                android:textSize="14sp"
                android:typeface="sans" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text_nuevo_trabajo_id_supervisor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="@string/text_nuevo_trabajo_id_supervisor"
                android:textSize="14sp"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/text_nuevo_trabajo_id_supervisor_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint=""
                android:text=""
                android:textSize="14sp"
                android:typeface="sans" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text_nuevo_trabajo_num_empleado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="@string/text_nuevo_trabajo_num_empleado"
                android:textSize="14sp"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/text_nuevo_trabajo_num_empleado_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint=""
                android:text=""
                android:textSize="14sp"
                android:typeface="sans" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text_nuevo_trabajo_id_posiciongps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/text_nuevo_trabajo_id_posiciongps"
                android:textSize="14sp"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/text_nuevo_trabajo_id_posiciongps_data"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:hint=""
                android:maxWidth="40dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:typeface="sans" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text_nuevo_trabajo_provincia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/text_nuevo_trabajo_provincia"
                android:textSize="14sp"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/text_nuevo_trabajo_provincia_data"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:hint=""
                android:maxWidth="40dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:typeface="sans" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text_nuevo_trabajo_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/text_nuevo_trabajo_descripcion"
                android:textSize="14sp"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/text_nuevo_trabajo_descripcion_data"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="left"
                android:hint=""
                android:maxWidth="40dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:typeface="sans" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text_nuevo_trabajo_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/text_nuevo_trabajo_estado"
                android:textSize="14sp"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/text_nuevo_trabajo_estado_data"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:hint=""
                android:maxWidth="40dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:typeface="sans" >
            </EditText>
        </TableRow>

        <Button
            android:id="@+id/button_nuevo_trabajo_insertar_datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/button_nuevo_trabajo_insertar_datos"
            android:textSize="16sp"
            android:typeface="sans" />
    </TableLayout>

</ScrollView>